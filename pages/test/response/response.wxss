/* pages/test/response/response.wxss */

page {
  background-color: #222166;
}

.response-header {
  width: 670rpx;
  height: 140rpx;
  background: rgba(19, 8, 85, 1);
  border-radius: 80rpx;
  margin-left: 40rpx;
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.header-info {
  margin-left: 30rpx;
  display: flex;
  align-items: center;
}

.info-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
}

.info-image image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
}

.info-name {
  color: #fa4b4b;
  font-size: 34rpx;
  margin-left: 20rpx;
}

.header-number {
  margin-right: 30rpx;
}

.all-number {
  color: #fff;
  font-size: 34rpx;
}

.now-number {
  font-size: 50rpx;
  color: #fa4b4b;
}

.response-main {
  width: 640rpx;
  background-color: #fff;
  border-radius: 40rpx;
  margin-left: 55rpx;
  margin-top: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 50rpx;
}

.countDown {
  width: 140rpx;
  height: 140rpx;
  background-color: white;
  border-radius: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: -70rpx;
}

.inside {
  width: 85rpx;
  height: 85rpx;
  background-color: white;
  border-radius: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 10rpx solid #f7605f;
}

.inside text {
  color: #f7605f;
  font-size: 48rpx;
  font-weight: bold;
}

.subject {
  width: 540rpx;
  margin-top: 30rpx;
  line-height: 70rpx;
  font-size: 40rpx;
  color: #000;
}

.options-group {
  margin-top: 55rpx;
  margin-bottom: 10rpx;
}

.option-father {
  display: flex;
  flex-direction: column;
}

.option-line {
  width: 540rpx;
  height: 100rpx;
  background: rgba(242, 245, 245, 1);
  box-shadow: 0rpx 5rpx 10rpx 0rpx rgba(0, 0, 0, 0.2);
  border-radius: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 50rpx;
  font-size: 30rpx;
  color: #000;
  text-align: center;
}

.check-image {
  width: 60rpx;
  height: 60rpx;  
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  right: -445rpx; 
  top: -68rpx;
  margin-top: -60rpx;
}

.check-image image {
  width: 60rpx;
  height: 60rpx;  
}


.correct-line {
  background: linear-gradient(-10deg, rgba(135, 201, 252, 0.9), rgba(65, 131, 245, 0.9));
  box-shadow: 0rpx 5rpx 10rpx 0rpx rgba(4, 32, 65, 0.2);
  color: white;
}

.fault-line {
  background: linear-gradient(-10deg, rgba(251, 153, 112, 0.9), rgba(247, 96, 95, 0.9));
  box-shadow: 0rpx 5rpx 10rpx 0rpx rgba(54, 9, 3, 0.2);
  color: white;
}

.option-default {
  width: 540rpx;
  height: 100rpx;
}

.marks {
  z-index: 999;
  width: 100%;
  height: 100%;
  background-color: black;
  opacity: 0.8;
  position: fixed;
  left: 0rpx;
  top: 0rpx;
}

.notice {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: fixed;
  width: 750rpx;
  height: 100%;
  left: 0rpx;
  top: 0rpx;
  z-index: 999;
}

.notice-main {
  width: 575rpx;
  background-color: white;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.notice-main-title {
  margin-top: 60rpx;
  color: #f7605f;
  font-size: 40rpx;
  font-weight: bold;
}

.notice-main-image {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 50rpx;
  margin-bottom: 80rpx;
  width: 156rpx;
  height: 224rpx;
}

.notice-main-image image {
  width: 156rpx;
  height: 224rpx;
}

.notice-main-content {
  display: flex;
  flex-direction: column;
  margin-top: 50rpx;
  width: 475rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 60rpx;
}

.notice-main-button {
  width: 380rpx;
  height: 88rpx;
  /* background-color: #FFD900; */
  color: white;
  font-size: 34rpx;
  border-radius: 44rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 40rpx;
  border: 0rpx;
}

.notice-main-button button{
  border: 0rpx;
}

.notice-main-remark {
  font-size: 20rpx;
  color: #b2b2b2;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}

.watch-answer {
  
  background: linear-gradient(-30deg, rgba(251, 153, 112, 1), rgba(247, 96, 95, 1));
}

.below {
  background:linear-gradient(-30deg,rgba(135,201,252,1),rgba(65,131,245,1));
}

.begin-ready {
  width: 750rpx;
  margin-top: 253rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.ready-background {
  width: 600rpx;
  height: 600rpx;
}

.ready-background image{
  width: 600rpx;
  height: 600rpx;
}

.ready-info {
  width: 150rpx;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  
  
}

.ready-info image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 100%;
}

.ready-info text {
  font-size: 120rpx;
  color: #fff;
}